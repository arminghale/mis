@model Login
@{
    Layout = null;
}

<html lang="fa">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
    <link rel="stylesheet" href="lib/bootstrap/dist/css/bootstrap-rtl.min.css" />
</head>
<body>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="row d-flex justify-content-center align-items-center" style="min-height:100vh;font-family:'B Nazanin'">

                <div class="col-md-4 border rounded shadow" style="background-color:lavender">
                    <div class="form-group text-center">
                        <h3 class="control-label">ورود</h3>
                    </div>
                    <form asp-action="Index" method="post">
                        <input hidden value="@ViewBag.url" name="ReturnUrl" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group text-center">
                            <input asp-for="username" id="username" class="form-control" style="text-align:center;" placeholder="نام کاربری" />
                            <span asp-validation-for="username" id="usernameerror" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <input type="password" asp-for="password" id="password" class="form-control" style="text-align:center;" placeholder="رمز عبور" />
                            <span asp-validation-for="password" id="passworderror" class="text-danger"></span>
                        </div>
                        <div class="form-group justify-content-center text-center">
                            <input type="submit" value="ورود" class="btn btn-outline-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </main>
    </div>
    <footer class="border-top footer text-muted text-center">
        <div class="container" style="font-family:'B Nazanin'">
            <a href="http://gu.ac.ir" target="_blank">دانشگاه گلستان</a>
        </div>
    </footer>
    <script src="lib/jquery/dist/jquery.min.js"></script>
    <script src="lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>

